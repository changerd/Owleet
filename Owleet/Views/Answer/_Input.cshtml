@model Owleet.Models.Answer

@{
    Layout = null;
    string action = ViewContext.RouteData.Values["Action"].ToString();
}
<form asp-action="@action" id="form">
    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="QuestionId" hidden class="form-control"/>
    <div class="form-group">
        <label asp-for="Text" class="col-form-label"></label>
        <input asp-for="Text" class="form-control"/>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsTrue" class="col-form-label"></label>
        <input asp-for="IsTrue" class="form-control"/>
        <span asp-validation-for="IsTrue" class="text-danger"></span>
    </div>
</form>

