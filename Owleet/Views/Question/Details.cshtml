@model Owleet.Models.Question
@{
    Layout = null;
}
<div id="modal-container" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подробно о помещении</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_Info", Model)
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-dark" data-target="#modal-container" data-dismiss="modal" data-toggle="modal" data-url="@Url.RouteUrl(new {Action="Edit", Id=Model?.Id})">Изменить</a>
            </div>
        </div>
    </div>
</div>
