@model Owleet.Models.Question

@{
    Layout = null;
}
<div id="modal-container" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить вопрос</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <form asp-action="AddQuestion" id="form">
                                <div class="form-group">
                                    <label asp-for="Text" class="col-form-label"></label>
                                    <input asp-for="Text" class="form-control"/>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button form="form" type="button" data-save="modal" class="btn btn-dark">Добавить</button>
            </div>
        </div>
    </div>
</div>
