@model IEnumerable<Owleet.Models.Test>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="modal-placeholder"></div>
<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New Test</a>
</p>
<div class="row" id="partial" data-find-element="true" data-url="@Url.RouteUrl(new {Controller = "Test",Action="Index"})">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        Questions: @item.Questions.Count
                    </p>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a href="#" class="btn btn-success" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {controller = "Test", action = "Details", id = item.Id})">Details</a> 
                    <a href="#" class="btn btn-success" data-target="#modal-container" data-toggle="modal" data-url="@Url.RouteUrl(new {controller = "Test", action = "Delete", id = item.Id})">Delete</a> 
                </div>
            </div>
        </div>
    }
</div>